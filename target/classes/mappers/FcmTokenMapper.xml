<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.DAO.FcmTokenRepository">

  <!-- 유저의 FCM 토큰 조회 -->
  <select id="getTokensByUserId" resultType="FcmTokenVO">
    SELECT token_id, user_id, token, created_at, last_used_at
    FROM fcm_token
    WHERE user_id = #{userId}
  </select>

  <!-- 토큰 저장 (중복 무시) -->
 <insert id="insertToken" parameterType="FcmTokenVO"
        useGeneratedKeys="true" keyProperty="tokenId">
  INSERT INTO fcm_token (user_id, token, created_at, last_used_at)
  VALUES (#{userId}, #{token}, NOW(), NOW())
  ON DUPLICATE KEY UPDATE last_used_at = NOW()
</insert>

  <!-- 토큰 삭제 -->
  <delete id="deleteToken">
    DELETE FROM fcm_token
    WHERE token = #{token}
  </delete>

	<delete id="deleteByUserId" parameterType="int">
  DELETE FROM fcm_token
  WHERE user_id = #{userId}
</delete>


</mapper>



